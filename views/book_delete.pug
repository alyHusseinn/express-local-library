extends layout

block content  
    h1 #{title} : `<span style="color: red;">#{book.title}<span>`

    if bookInstances.length
        h2 You should Delete all these book instances first.
        h3 book Instances: 
        ul
        each instance in bookInstances
            li 
                a(href=instance.url) ID: #{instance.id}

    else 
        p Do you really want to delete this book.
        form(method='POST')
            div#form-group
                button.btn.btn-primary(type='submit') Delete